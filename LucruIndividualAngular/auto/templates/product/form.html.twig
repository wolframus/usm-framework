{% extends 'base.html.twig' %}

{% block title %}
	{{ product.name }}
{% endblock %}

{% block body %}
	<section class="container max-w-6xl  text-slate-900 mx-auto mt-10">
		{{ form_start(form) }}
		<div class="border border-blue-400 px-4 py-5 rounded-xl" style="background: white;">
			<div class="mb-3">
				{% for notice in app.flashes('error') %}
					{% include "_alert.html.twig" with { 'alertMessage': notice, 'type': 'error' } %}
				{% endfor %}
				{% for notice in app.flashes('success') %}
					{% include "_alert.html.twig" with { 'alertMessage': notice, 'type': 'success' } %}
				{% endfor %}
			</div>
			<div class="grid grid-cols-6 gap-4">
				<div class="col-span-3">
					{{ form_label(form.name) }}
					{{ form_widget(form.name) }}

					<span class="text-red-600">
						{{ form_errors(form.name) }}</span>
				</div>
				<div class="col-span-3">
					{{ form_label(form.price) }}
					{{ form_widget(form.price) }}
					<span class="text-red-600">
						{{ form_errors(form.price) }}</span>
				</div>
				<div class="col-span-6">
					{{ form_label(form.description) }}
					{{ form_widget(form.description) }}
					<span class="text-red-600">
						{{ form_errors(form.description) }}</span>
				</div>
				<div class="col-span-3">
					{{ form_label(form.image) }}
					{{ form_widget(form.image) }}
					<span class="text-red-600">
						{{ form_errors(form.image) }}</span>
				</div>
				<div class="col-span-3">
					{{ form_label(form.category) }}
					{{ form_widget(form.category) }}
					<span class="text-red-600">
						<span class="text-red-600">
							{{ form_errors(form.category) }}</span>
					</div>
				</div>
				<div class="mt-5">
					{{ form_widget(form.save) }}
					<a class="bg-blue-200 bg-transparent p-3  cursor-pointer rounded-lg leading-none border ml-4 border-blue-300 hover:ring-2 hover:ring-blue-300" href="{{ path('app_product_list') }}">CATALOG</a>
				</div>
			</div>
			{{ form_end(form) }}
		</section>
	{% endblock %}
